{
    "template": "twitter*",
    "mappings": {
        "tweet": {
            "properties": {
                "author_id": {
                    "type": "string"
                },
                "retweet_count": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "created_at": {
                    "type": "date",
                    "ignore_malformed": true,
                    "format": "dateOptionalTime"
                },
                "language": {
                    "type": "string",
                    "index": "not_analyzed"
                }
            }
        }
    }

}
